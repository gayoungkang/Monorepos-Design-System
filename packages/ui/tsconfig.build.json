{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,

    "jsx": "react-jsx",

    "rootDir": "src",
    "outDir": "dist",
    "stripInternal": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}
