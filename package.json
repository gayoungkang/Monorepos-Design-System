{
  "name": "acme-design-system",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "icons:types": "tsx scripts/generate-icon-types.ts",
    "icons:sprite": "tsx scripts/generate-icon-sprite.ts",
    "icons:copy:web": "tsx scripts/copy-icon-sprite-to-web.ts",
    "icons:build": "yarn icons:types && yarn icons:sprite",
    "dev": "yarn icons:build && yarn icons:copy:web && yarn workspace web dev",
    "build": "yarn icons:build && yarn icons:copy:web && yarn workspace web build",
    "storybook": "yarn icons:build && yarn workspace @acme/ui storybook",
    "preview": "yarn workspace web preview",
    "build:ui": "yarn workspace @acme/ui build",
    "storybook:build": "yarn workspace @acme/ui storybook:build",
    "storybook:test": "yarn workspace @acme/ui storybook:test",
    "storybook:ci": "yarn storybook:build && yarn storybook:test",
    "lint": "eslint . --ext ts,tsx --fix",
    "format": "prettier . --write",
    "prepare": "husky install",
    "fix:svg": "tsx scripts/fix-svg.ts",
    "icons:generate": "tsx scripts/generate-icon-types.ts",
    "changeset": "changeset",
    "chromatic": "chromatic",
    "changeset:init": "changeset init",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "packageManager": "yarn@4.11.0+sha512.4e54aeace9141df2f0177c266b05ec50dc044638157dae128c471ba65994ac802122d7ab35bcd9e81641228b7dcf24867d28e750e0bcae8a05277d600008ad54",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-themes": "^10.1.5",
    "@types/eslint": "^9.6.1",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.1",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "chromatic": "^15.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "fast-glob": "^3.3.3",
    "globals": "^17.3.0",
    "husky": "^8.0.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svgo": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "resolutions": {
    "vitest": "4.0.18",
    "@vitest/expect": "4.0.18",
    "@vitest/runner": "4.0.18",
    "@vitest/snapshot": "4.0.18",
    "@vitest/utils": "4.0.18",
    "@vitest/spy": "4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "zustand": "^5.0.9"
  }
}
